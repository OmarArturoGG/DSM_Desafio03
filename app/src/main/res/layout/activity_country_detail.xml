<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#DDE4ED">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Card para la bandera -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#B4C9DD">

            <ImageView
                android:id="@+id/flagImageView"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:contentDescription="Bandera del país" />

        </androidx.cardview.widget.CardView>

        <!-- Card para información del país -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#B4C9DD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Información del País"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1E293B"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/nameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textStyle="bold"
                    android:textColor="#1E293B"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/capitalTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Capital"
                    android:textColor="#334155"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/regionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Región"
                    android:textColor="#334155"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/populationTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Población"
                    android:textColor="#334155"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/codesTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Códigos"
                    android:textColor="#334155"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/currenciesTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Monedas"
                    android:textColor="#334155"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/languagesTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Idiomas"
                    android:textColor="#334155"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/coordinatesTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Coordenadas"
                    android:textColor="#334155" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card para el clima -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#B4C9DD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Clima Actual"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1E293B"
                    android:layout_marginBottom="12dp" />

                <!-- ProgressBar dentro de la card -->
                <ProgressBar
                    android:id="@+id/weatherProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:id="@+id/weatherLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:id="@+id/weatherIconImageView"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="Icono del clima" />

                        <TextView
                            android:id="@+id/temperatureTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Temperatura"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#0369A1"
                            android:layout_marginStart="12dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/conditionTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Condición"
                        android:textColor="#334155"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/windTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Viento"
                        android:textColor="#334155"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/humidityTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Humedad"
                        android:textColor="#334155"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/feelsLikeTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sensación térmica"
                        android:textColor="#334155" />

                </LinearLayout>

                <TextView
                    android:id="@+id/weatherErrorTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#DC2626"
                    android:visibility="gone" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>